    <style>
        /* Writer's Theme - Typography-Focused */
        :root {
            --writer-ink: #2c3e50;
            --writer-parchment: #f8f5f0;
            --writer-gold: #d4af37;
            --writer-burgundy: #800020;
        }

        .hero-writers {
            background: linear-gradient(180deg, var(--writer-parchment) 0%, var(--white) 100%);
            padding-top: calc(var(--header-height) + var(--space-16));
        }

        /* Elegant Typography Showcase */
        .typography-showcase {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: var(--space-6);
            margin: var(--space-8) 0;
        }

        .font-sample {
            background: var(--white);
            border-radius: var(--radius-lg);
            padding: var(--space-6);
            box-shadow: var(--shadow-md);
            border-left: 4px solid var(--writer-gold);
            transition: all var(--transition-base);
        }

        .font-sample:hover {
            transform: translateX(8px);
            box-shadow: var(--shadow-xl);
        }

        .font-label {
            font-size: var(--text-xs);
            text-transform: uppercase;
            letter-spacing: 0.1em;
            color: var(--writer-gold);
            font-weight: var(--weight-semibold);
            margin-bottom: var(--space-2);
        }

        .sample-professional {
            font-family: Georgia, serif;
            font-size: var(--text-lg);
            color: var(--writer-ink);
            line-height: 1.8;
        }

        .sample-casual {
            font-family: -apple-system, BlinkMacSystemFont, sans-serif;
            font-size: var(--text-base);
            color: var(--gray-700);
            line-height: 1.6;
        }

        .sample-poetic {
            font-family: 'Palatino', 'Book Antiqua', serif;
            font-size: var(--text-lg);
            font-style: italic;
            color: var(--writer-burgundy);
            line-height: 2;
        }

        .voice-spectrum {
            background: linear-gradient(90deg,
                #e3f2fd 0%,
                #bbdefb 25%,
                #90caf9 50%,
                #64b5f6 75%,
                #42a5f5 100%
            );
            height: 8px;
            border-radius: var(--radius-full);
            margin: var(--space-4) 0;
            position: relative;
        }

        .voice-marker {
            position: absolute;
            top: -20px;
            width: 2px;
            height: 48px;
            background: var(--writer-burgundy);
            transition: left 0.5s ease;
        }

        .voice-marker::after {
            content: attr(data-label);
            position: absolute;
            top: -25px;
            left: 50%;
            transform: translateX(-50%);
            font-size: var(--text-xs);
            font-weight: var(--weight-semibold);
            white-space: nowrap;
            color: var(--writer-burgundy);
        }

        .writing-sample-card {
            background: var(--white);
            border-radius: var(--radius-xl);
            padding: var(--space-6);
            box-shadow: var(--shadow-lg);
            margin: var(--space-6) 0;
            border: 1px solid var(--gray-200);
        }

        .typewriter-text {
            font-family: 'Courier New', monospace;
            font-size: var(--text-lg);
            line-height: 1.8;
            color: var(--writer-ink);
            position: relative;
            display: inline-block;
        }

        .typewriter-text::after {
            content: '|';
            position: absolute;
            right: -10px;
            animation: blink 1s infinite;
        }

        @keyframes blink {
            0%, 50% { opacity: 1; }
            51%, 100% { opacity: 0; }
        }

        .feature-writer {
            background: var(--writer-parchment);
            border: 1px solid var(--writer-gold);
            transition: all var(--transition-base);
        }

        .feature-writer:hover {
            border-color: var(--writer-burgundy);
            transform: translateY(-8px);
            box-shadow: var(--shadow-xl);
        }

        .quote-mark {
            font-size: 6rem;
            color: var(--writer-gold);
            opacity: 0.3;
            line-height: 0;
            font-family: Georgia, serif;
        }

        .testimonial-writer {
            background: var(--white);
            border-radius: var(--radius-xl);
            padding: var(--space-8);
            box-shadow: var(--shadow-lg);
            position: relative;
            overflow: hidden;
        }

        .testimonial-writer::before {
            content: '"';
            position: absolute;
            top: -20px;
            left: 20px;
            font-size: 120px;
            color: var(--writer-gold);
            opacity: 0.1;
            font-family: Georgia, serif;
        }

        .gradient-text-writer {
            background: linear-gradient(135deg, var(--writer-burgundy), var(--writer-ink), var(--gemini-blue));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        /* Mobile responsiveness */
        @media (max-width: 768px) {
            /* Shared styles handle most mobile responsiveness */
        }
    </style>
