    <link rel="stylesheet" href="../assets/css/shared-styles.css">
    <style>
        /* Workspace Integration Theme */
        :root {
            --workspace-blue: #4285f4;
            --workspace-red: #ea4335;
            --workspace-yellow: #fbbc04;
            --workspace-green: #34a853;
        }

        .hero-operators {
            background: linear-gradient(135deg, var(--gray-50) 0%, var(--white) 100%);
        }

        /* Sliding Panel Demo */
        .sliding-panel-container {
            background: var(--gray-50);
            border-radius: var(--radius-2xl);
            padding: var(--space-6);
            box-shadow: var(--shadow-xl);
            max-width: 1000px;
            margin: var(--space-8) auto;
            position: relative;
            overflow: hidden;
        }

        .panel {
            display: none;
            opacity: 0;
            transition: opacity 0.5s ease;
        }

        .panel.active {
            display: block;
            opacity: 1;
            animation: slideIn 0.5s ease;
        }

        @keyframes slideIn {
            from {
                transform: translateX(50px);
                opacity: 0;
            }
            to {
                transform: translateX(0);
                opacity: 1;
            }
        }

        .workspace-app-card {
            background: var(--white);
            border-radius: var(--radius-lg);
            padding: var(--space-5);
            box-shadow: var(--shadow-sm);
            border-left: 4px solid var(--workspace-blue);
            transition: all var(--transition-base);
        }

        .workspace-app-card:hover {
            transform: translateX(8px);
            box-shadow: var(--shadow-lg);
        }

        .app-icon {
            width: 48px;
            height: 48px;
            border-radius: var(--radius-md);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
            margin-bottom: var(--space-3);
        }

        .gmail-icon { background: #ea4335; color: white; }
        .docs-icon { background: #4285f4; color: white; }
        .sheets-icon { background: #34a853; color: white; }
        .slides-icon { background: #fbbc04; color: white; }
        .drive-icon { background: linear-gradient(135deg, #fbbc04, #34a853, #4285f4); color: white; }
        .calendar-icon { background: #4285f4; color: white; }

        .integration-flow {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: var(--space-4);
            margin: var(--space-8) 0;
            flex-wrap: wrap;
        }

        .flow-item {
            background: var(--white);
            border-radius: var(--radius-lg);
            padding: var(--space-4);
            box-shadow: var(--shadow-md);
            text-align: center;
            min-width: 150px;
        }

        .flow-arrow {
            font-size: 2rem;
            color: var(--workspace-blue);
        }

        .panel-navigation {
            display: flex;
            justify-content: center;
            gap: var(--space-2);
            margin-top: var(--space-4);
        }

        .panel-dot {
            width: 12px;
            height: 12px;
            border-radius: 50%;
            background: var(--gray-300);
            border: none;
            cursor: pointer;
            transition: all var(--transition-base);
        }

        .panel-dot.active {
            background: var(--workspace-blue);
            width: 32px;
            border-radius: var(--radius-full);
        }

        .feature-workspace {
            border: 2px solid var(--gray-200);
            transition: all var(--transition-base);
        }

        .feature-workspace:hover {
            border-color: var(--workspace-blue);
            transform: translateY(-8px);
            box-shadow: var(--shadow-xl);
        }

        .gradient-text-workspace {
            background: linear-gradient(135deg, var(--workspace-blue), var(--workspace-green), var(--workspace-yellow));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .demo-screenshot {
            background: var(--gray-100);
            border-radius: var(--radius-lg);
            padding: var(--space-4);
            aspect-ratio: 16/9;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: var(--text-2xl);
            color: var(--gray-400);
            border: 2px dashed var(--gray-300);
        }

        /* Mobile responsiveness */
        @media (max-width: 768px) {
            /* Shared styles handle most mobile responsiveness */
        }
