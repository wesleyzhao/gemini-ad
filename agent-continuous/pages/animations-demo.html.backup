    <script>
        // Custom initialization for demo page
        document.addEventListener('DOMContentLoaded', () => {
            // Add smooth scroll behavior
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function (e) {
                    e.preventDefault();
                    const target = document.querySelector(this.getAttribute('href'));
                    if (target) {
                        target.scrollIntoView({ behavior: 'smooth' });
                    }
                });
            });

            // Simulate video loading state
            setTimeout(() => {
                document.querySelectorAll('.video-loading').forEach(video => {
                    video.classList.add('loaded');
                });
            }, 500);

            // Add demo message for canvas (since we don't have actual frames yet)
            const canvas = document.getElementById('scroll-sequence');
            if (canvas) {
                const ctx = canvas.getContext('2d');

                // Draw placeholder gradient animation
                let hue = 220;
                function drawPlaceholder() {
                    const gradient = ctx.createLinearGradient(0, 0, canvas.width, canvas.height);
                    gradient.addColorStop(0, `hsl(${hue}, 70%, 50%)`);
                    gradient.addColorStop(1, `hsl(${(hue + 60) % 360}, 70%, 50%)`);

                    ctx.fillStyle = gradient;
                    ctx.fillRect(0, 0, canvas.width, canvas.height);

                    // Add text
                    ctx.fillStyle = 'rgba(255, 255, 255, 0.9)';
                    ctx.font = '48px -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif';
                    ctx.textAlign = 'center';
                    ctx.fillText('Scroll to see animation', canvas.width / 2, canvas.height / 2);
                    ctx.font = '24px -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif';
                    ctx.fillStyle = 'rgba(255, 255, 255, 0.7)';
                    ctx.fillText('Upload image sequence frames to activate', canvas.width / 2, canvas.height / 2 + 50);

                    hue = (hue + 0.2) % 360;
                    requestAnimationFrame(drawPlaceholder);
                }
                drawPlaceholder();
            }
        });
    </script>
