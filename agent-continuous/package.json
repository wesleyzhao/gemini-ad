{
  "name": "project",
  "version": "1.0.0",
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "serve": "http-server . -p 8080 -o",
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:cross-browser": "playwright test tests/cross-browser.spec.js --project=chromium --project=firefox --project=webkit --project=edge",
    "test:cross-browser:validate": "node scripts/validate-cross-browser.js",
    "test:browsers": "npm run test:cross-browser && npm run test:cross-browser:validate",
    "screenshots": "playwright test --reporter=html",
    "screenshots:check": "node tests/validate-screenshot-readiness.js",
    "test:mobile": "node tests/validate-mobile-responsiveness.js",
    "test:lazy": "node tests/validate-lazy-loading.js",
    "test:accessibility": "node scripts/validate-accessibility.js",
    "test:perf-optimization": "node scripts/validate-performance-optimization.js",
    "test:images": "node tests/validate-image-optimization.js",
    "test:cwv": "node tests/validate-core-web-vitals.js",
    "test:monitoring": "node tests/validate-production-monitoring.js",
    "optimize-images": "node scripts/optimize-images.js --report",
    "optimize:cwv": "node scripts/core-web-vitals.js --optimize",
    "analyze:cwv": "node scripts/core-web-vitals.js --analyze",
    "report:cwv": "node scripts/core-web-vitals.js --report",
    "monitor:cwv": "node scripts/monitor-production-cwv.js --report",
    "monitor:cwv:analyze": "node scripts/monitor-production-cwv.js --analyze",
    "monitor:cwv:dashboard": "node scripts/monitor-production-cwv.js --dashboard",
    "monitor:cwv:alerts": "node scripts/monitor-production-cwv.js --alerts",
    "analyze:trends": "node scripts/analyze-trends.js --full-report",
    "analyze:trends:insights": "node scripts/analyze-trends.js --insights",
    "analyze:trends:recommend": "node scripts/analyze-trends.js --recommend",
    "track:implementations": "node scripts/implementation-tracker.js --track",
    "track:list": "node scripts/implementation-tracker.js --list",
    "track:impact": "node scripts/implementation-tracker.js --impact",
    "track:dashboard": "node scripts/implementation-tracker.js --dashboard",
    "test:trends": "node tests/validate-trend-analysis.js",
    "build": "node scripts/build-minified.js",
    "build:prod": "npm run build && node scripts/update-asset-references.js",
    "prebuild": "echo 'Building minified assets for production...'",
    "postbuild": "npm run test:perf-optimization",
    "validate": "npm run validate:html && npm run validate:css && npm run validate:perf && npm run test:mobile && npm run test:lazy && npm run test:accessibility && npm run test:perf-optimization && npm run test:images && npm run test:cwv && npm run test:monitoring && npm run test:trends",
    "validate:html": "node tests/validate-html.js",
    "validate:css": "node tests/validate-css.js",
    "validate:perf": "node tests/validate-performance.js",
    "validate:deployment": "node scripts/validate-deployment.js",
    "predeploy": "npm run build && npm run validate",
    "deploy": "echo 'Deployment happens automatically via GitHub Actions. Just push to main!' && echo 'To manually trigger: Go to Actions tab → Deploy to GitHub Pages → Run workflow'",
    "deploy:check": "node scripts/check-deployment-status.js"
  },
  "keywords": [],
