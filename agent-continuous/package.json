  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@playwright/test": "^1.58.1",
    "chrome-launcher": "^1.2.1",
    "clean-css-cli": "^5.6.3",
    "html-minifier-terser": "^7.2.0",
    "http-server": "^14.1.1",
    "jsdom": "^26.1.0",
    "lighthouse": "^12.8.2",
    "node-html-parser": "^7.0.2",
    "playwright": "^1.58.1",
    "terser": "^5.46.0"
  }
}
