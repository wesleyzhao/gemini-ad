{
  "version": "1.0.0",
  "description": "Performance budgets for Gemini landing pages based on Core Web Vitals",
  "lastUpdated": "2026-02-01",

  "coreWebVitals": {
    "LCP": {
      "name": "Largest Contentful Paint",
      "description": "Measures loading performance. Should occur within 2.5s of page load",
      "thresholds": {
        "good": 2500,
        "needsImprovement": 4000,
        "poor": 4001
      },
      "unit": "milliseconds",
      "weight": "high",
      "target": 2000
    },
    "FID": {
      "name": "First Input Delay",
      "description": "Measures interactivity. Pages should have FID of 100ms or less",
      "thresholds": {
        "good": 100,
        "needsImprovement": 300,
        "poor": 301
      },
      "unit": "milliseconds",
      "weight": "high",
      "target": 50
    },
    "INP": {
      "name": "Interaction to Next Paint",
      "description": "Replacing FID. Measures overall responsiveness to user interactions",
      "thresholds": {
        "good": 200,
        "needsImprovement": 500,
        "poor": 501
      },
      "unit": "milliseconds",
      "weight": "high",
      "target": 150
    },
    "CLS": {
      "name": "Cumulative Layout Shift",
      "description": "Measures visual stability. Should maintain CLS of 0.1 or less",
      "thresholds": {
        "good": 0.1,
        "needsImprovement": 0.25,
        "poor": 0.26
      },
      "unit": "score",
      "weight": "high",
      "target": 0.05
    }
  },

  "supportingMetrics": {
    "FCP": {
      "name": "First Contentful Paint",
      "description": "Measures when first content appears",
      "thresholds": {
        "good": 1800,
        "needsImprovement": 3000,
        "poor": 3001
      },
      "unit": "milliseconds",
      "weight": "medium",
      "target": 1500
    },
    "TTFB": {
      "name": "Time to First Byte",
      "description": "Measures server response time",
      "thresholds": {
        "good": 800,
        "needsImprovement": 1800,
        "poor": 1801
      },
      "unit": "milliseconds",
      "weight": "medium",
      "target": 600
    },
    "TBT": {
      "name": "Total Blocking Time",
      "description": "Measures total time when main thread is blocked",
      "thresholds": {
        "good": 200,
        "needsImprovement": 600,
        "poor": 601
      },
      "unit": "milliseconds",
      "weight": "medium",
      "target": 150
    },
    "SI": {
      "name": "Speed Index",
      "description": "Measures how quickly content is visually displayed",
      "thresholds": {
        "good": 3400,
        "needsImprovement": 5800,
        "poor": 5801
      },
      "unit": "milliseconds",
      "weight": "medium",
      "target": 3000
    }
  },

  "resourceBudgets": {
    "javascript": {
      "description": "Total JavaScript bundle size",
      "budget": 200,
      "unit": "KB",
      "current": 50,
      "status": "good"
    },
    "css": {
      "description": "Total CSS size",
      "budget": 100,
      "unit": "KB",
      "current": 30,
      "status": "good"
    },
    "images": {
      "description": "Total image weight (when added)",
      "budget": 500,
      "unit": "KB",
      "current": 0,
      "status": "good"
    },
    "fonts": {
      "description": "Total font weight",
      "budget": 100,
      "unit": "KB",
      "current": 50,
      "status": "good"
    },
    "totalPageWeight": {
      "description": "Total page weight including all resources",
      "budget": 1000,
      "unit": "KB",
      "current": 150,
      "status": "good"
    }
  },

  "requestBudgets": {
    "totalRequests": {
      "description": "Total number of HTTP requests",
      "budget": 50,
      "current": 10,
      "status": "good"
    },
    "thirdPartyRequests": {
      "description": "Requests to third-party domains",
      "budget": 10,
      "current": 5,
      "status": "good"
    }
  },

  "lighthouseScores": {
    "performance": {
      "target": 90,
      "minimum": 80,
      "description": "Lighthouse Performance score"
    },
    "accessibility": {
      "target": 100,
      "minimum": 95,
      "description": "Lighthouse Accessibility score"
    },
    "bestPractices": {
      "target": 100,
      "minimum": 90,
      "description": "Lighthouse Best Practices score"
    },
    "seo": {
      "target": 100,
      "minimum": 95,
      "description": "Lighthouse SEO score"
    }
  },

  "enforcement": {
    "strategy": "Monitor and alert on budget violations",
    "tools": [
      "Lighthouse CI",
      "Chrome DevTools",
      "Web Vitals Chrome Extension",
      "Google Analytics 4 (production)"
    ],
    "frequency": "On every deployment",
    "alerting": {
      "enabled": true,
      "thresholds": "Any 'poor' rating triggers alert",
      "channels": ["CI/CD pipeline", "Development logs"]
    }
  },

  "optimizationStrategy": {
    "priorities": [
      {
        "rank": 1,
        "optimization": "Minimize render-blocking resources",
        "impact": "Improves FCP and LCP",
        "status": "implemented"
      },
      {
        "rank": 2,
        "optimization": "Eliminate layout shifts",
        "impact": "Improves CLS",
        "status": "implemented"
      },
      {
        "rank": 3,
        "optimization": "Optimize JavaScript execution",
        "impact": "Improves FID/INP and TBT",
        "status": "implemented"
      },
      {
        "rank": 4,
        "optimization": "Image optimization and lazy loading",
        "impact": "Improves LCP and page weight",
        "status": "ready (when images added)"
      },
      {
        "rank": 5,
        "optimization": "Font optimization",
        "impact": "Improves CLS and FCP",
        "status": "implemented"
      }
    ]
  },

  "monitoringDashboard": {
    "realUserMonitoring": {
      "enabled": true,
      "provider": "Google Analytics 4",
      "metrics": ["LCP", "FID", "INP", "CLS", "FCP", "TTFB"],
      "sampleRate": 100,
      "notes": "All users are monitored for Core Web Vitals"
    },
    "syntheticMonitoring": {
      "enabled": true,
      "provider": "Lighthouse CI",
      "frequency": "On deployment",
      "devices": ["mobile", "desktop"],
      "connections": ["3G", "4G", "broadband"]
    }
  },

  "historicalData": {
    "baseline": {
      "date": "2026-02-01",
      "note": "Pre-optimization baseline",
      "issues": {
        "total": 80,
        "perPage": 4,
        "common": [
          "Missing preconnect for external resources",
          "Missing font-display:swap",
          "No preload hints",
          "No Core Web Vitals monitoring"
        ]
      }
    },
    "afterOptimization": {
      "date": "2026-02-01",
      "note": "Post-optimization state",
      "optimizations": 80,
      "expectedImprovements": {
        "LCP": "-30% to -50%",
        "FCP": "-20% to -40%",
        "CLS": "Near-zero (no images yet)",
        "FID": "Should remain excellent (<50ms)"
      }
    }
  },

  "notes": [
    "These budgets are based on Google's Core Web Vitals thresholds",
    "Target values are more aggressive than 'good' thresholds to ensure consistent excellent performance",
    "GitHub Pages hosting provides excellent TTFB and caching",
    "Static site architecture gives us inherent performance advantages",
    "Monitor real user metrics via Google Analytics 4 custom events",
    "Review and update budgets quarterly based on real user data"
  ]
}
