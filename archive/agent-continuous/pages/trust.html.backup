    <link rel="stylesheet" href="../assets/css/shared-styles.css">
    <style>
        /* Academic/Trust Theme */
        :root {
            --trust-navy: #1e3a8a;
            --trust-gold: #d97706;
            --trust-teal: #0d9488;
            --academic-serif: Georgia, 'Times New Roman', serif;
        }

        .hero-trust {
            background: linear-gradient(180deg, #f0f9ff 0%, var(--white) 100%);
        }

        .citation-example {
            background: var(--white);
            border: 2px solid var(--trust-navy);
            border-radius: var(--radius-xl);
            padding: var(--space-6);
            box-shadow: var(--shadow-lg);
            margin: var(--space-8) 0;
            font-family: var(--academic-serif);
            line-height: 1.8;
        }

        .citation-marker {
            color: var(--trust-teal);
            font-weight: var(--weight-bold);
            cursor: pointer;
            border-bottom: 2px solid var(--trust-teal);
            transition: all var(--transition-base);
        }

        .citation-marker:hover {
            background: var(--gemini-blue-light);
        }

        .source-card {
            background: var(--gray-50);
            border-left: 4px solid var(--trust-gold);
            border-radius: var(--radius-lg);
            padding: var(--space-4);
            margin-top: var(--space-3);
            font-size: var(--text-sm);
        }

        .source-card .source-title {
            font-weight: var(--weight-semibold);
            color: var(--trust-navy);
            margin-bottom: var(--space-1);
        }

        .source-card .source-meta {
            color: var(--gray-600);
            font-size: var(--text-xs);
        }

        .fact-check-badge {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            padding: 8px 16px;
            border-radius: var(--radius-full);
            font-size: var(--text-sm);
            font-weight: var(--weight-medium);
        }

        .badge-verified {
            background: #d1fae5;
            color: #065f46;
            border: 1px solid #10b981;
        }

        .badge-caution {
            background: #fef3c7;
            color: #92400e;
            border: 1px solid #f59e0b;
        }

        .feature-trust {
            background: linear-gradient(135deg, var(--white), #f0f9ff);
            border: 2px solid var(--trust-navy);
            transition: all var(--transition-base);
        }

        .feature-trust:hover {
            border-color: var(--trust-teal);
            transform: translateY(-8px);
            box-shadow: var(--shadow-xl);
        }

        .academic-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: var(--space-6);
            margin: var(--space-8) 0;
        }

        .gradient-text-trust {
            background: linear-gradient(135deg, var(--trust-navy), var(--trust-teal), var(--trust-gold));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .research-stat {
            text-align: center;
            padding: var(--space-5);
            background: var(--white);
            border-radius: var(--radius-lg);
            box-shadow: var(--shadow-md);
            border-top: 4px solid var(--trust-teal);
        }

        .stat-number-trust {
            font-size: var(--text-4xl);
            font-weight: var(--weight-bold);
            color: var(--trust-navy);
            display: block;
            margin-bottom: var(--space-2);
        }

        .methodology-section {
            background: var(--gray-50);
            border-radius: var(--radius-xl);
            padding: var(--space-8);
            margin: var(--space-8) 0;
        }

        .methodology-step {
            display: flex;
            gap: var(--space-4);
            margin-bottom: var(--space-6);
            align-items: start;
        }

        .step-number {
            width: 48px;
            height: 48px;
            background: var(--trust-navy);
            color: var(--white);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: var(--weight-bold);
            flex-shrink: 0;
        }

        /* Mobile responsiveness */
        @media (max-width: 768px) {
            /* Shared styles handle most mobile responsiveness */
        }
