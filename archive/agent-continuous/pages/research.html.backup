        }

        .paper-mockup {
            background: var(--white);
            border: 1px solid var(--gray-300);
            border-radius: var(--radius-lg);
            padding: var(--space-6);
            box-shadow: var(--shadow-xl);
            font-family: Georgia, serif;
            max-width: 700px;
            margin: var(--space-8) auto;
        }

        .paper-title {
            font-size: var(--text-2xl);
            font-weight: var(--weight-bold);
            text-align: center;
            margin-bottom: var(--space-4);
            color: var(--research-burgundy);
            line-height: 1.3;
        }

        .paper-authors {
            text-align: center;
            font-size: var(--text-sm);
            color: var(--gray-600);
            margin-bottom: var(--space-4);
        }

        .paper-abstract {
            border-top: 2px solid var(--research-amber);
            border-bottom: 2px solid var(--research-amber);
            padding: var(--space-4) 0;
            margin: var(--space-4) 0;
            font-size: var(--text-sm);
            line-height: 1.8;
        }

        .research-workflow {
            background: linear-gradient(135deg, var(--gray-50), var(--white));
            border-radius: var(--radius-xl);
            padding: var(--space-8);
            margin: var(--space-8) 0;
        }

        .workflow-phase {
            display: grid;
            grid-template-columns: 100px 1fr;
            gap: var(--space-4);
            margin-bottom: var(--space-6);
            padding-bottom: var(--space-6);
            border-bottom: 1px solid var(--gray-200);
        }

        .workflow-phase:last-child {
            border-bottom: none;
        }

        .phase-label {
            background: var(--research-burgundy);
            color: var(--white);
            padding: var(--space-2);
            border-radius: var(--radius-md);
            text-align: center;
            font-size: var(--text-sm);
            font-weight: var(--weight-semibold);
            align-self: start;
        }

        .feature-research {
            background: var(--white);
            border: 2px solid var(--research-amber);
            transition: all var(--transition-base);
        }

        .feature-research:hover {
            border-color: var(--research-burgundy);
            transform: translateY(-8px);
            box-shadow: var(--shadow-xl);
        }

        .publication-badge {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            padding: 4px 12px;
            border-radius: var(--radius-full);
            font-size: var(--text-xs);
            font-weight: var(--weight-medium);
            background: var(--research-emerald);
            color: var(--white);
        }

        .gradient-text-research {
            background: linear-gradient(135deg, var(--research-burgundy), var(--research-amber), var(--research-emerald));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        /* Mobile responsiveness */
        @media (max-width: 768px) {
            .workflow-phase {
                grid-template-columns: 80px 1fr;
                gap: var(--space-2);
            }

            .research-workflow {
                padding: var(--space-4);
            }
        }

        @media (max-width: 480px) {
            .workflow-phase {
                grid-template-columns: 60px 1fr;
                gap: var(--space-2);
                margin-bottom: var(--space-4);
                padding-bottom: var(--space-4);
            }

            .phase-label {
                font-size: var(--text-xs);
                padding: var(--space-1);
            }
        }

        .research-stat-box {
            background: linear-gradient(135deg, var(--research-burgundy), var(--research-amber));
            color: var(--white);
            border-radius: var(--radius-xl);
            padding: var(--space-6);
            text-align: center;
        }

        .stat-big {
            font-size: var(--text-5xl);
            font-weight: var(--weight-bold);
            display: block;
            margin-bottom: var(--space-2);
        }
