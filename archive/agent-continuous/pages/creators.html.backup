    <link rel="stylesheet" href="../assets/css/shared-styles.css">
    <style>
        /* Creator's Theme - Visual & Dynamic */
        :root {
            --creator-purple: #8b5cf6;
            --creator-pink: #ec4899;
            --creator-orange: #f97316;
            --creator-cyan: #06b6d4;
            --creator-gradient: linear-gradient(135deg, var(--creator-purple), var(--creator-pink), var(--creator-orange));
        }

        .hero-creators {
            background: radial-gradient(ellipse at top, var(--gemini-blue-light), var(--white));
            position: relative;
            overflow: hidden;
        }

        /* Animated Gradient Background */
        .gradient-orb {
            position: absolute;
            border-radius: 50%;
            filter: blur(80px);
            opacity: 0.3;
            animation: float 20s infinite ease-in-out;
        }

        .orb-1 {
            width: 400px;
            height: 400px;
            background: var(--creator-purple);
            top: -100px;
            left: -100px;
            animation-delay: 0s;
        }

        .orb-2 {
            width: 350px;
            height: 350px;
            background: var(--creator-pink);
            top: 50%;
            right: -100px;
            animation-delay: 5s;
        }

        .orb-3 {
            width: 300px;
            height: 300px;
            background: var(--creator-cyan);
            bottom: -100px;
            left: 30%;
            animation-delay: 10s;
        }

        @keyframes float {
            0%, 100% { transform: translate(0, 0) scale(1); }
            33% { transform: translate(50px, -50px) scale(1.1); }
            66% { transform: translate(-30px, 30px) scale(0.9); }
        }

        .video-showcase {
            background: var(--gray-900);
            border-radius: var(--radius-2xl);
            padding: var(--space-2);
            box-shadow: var(--shadow-2xl);
            position: relative;
            overflow: hidden;
        }

        .video-placeholder {
            aspect-ratio: 16/9;
            background: linear-gradient(135deg, #1a1a1a, #2d2d2d);
            border-radius: var(--radius-lg);
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
            overflow: hidden;
        }

        .play-button {
            width: 80px;
            height: 80px;
            background: var(--white);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all var(--transition-base);
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
        }

        .play-button:hover {
            transform: scale(1.1);
            box-shadow: 0 12px 48px rgba(0, 0, 0, 0.4);
        }

        .play-icon {
            width: 0;
            height: 0;
            border-left: 24px solid var(--gray-900);
            border-top: 16px solid transparent;
            border-bottom: 16px solid transparent;
            margin-left: 6px;
        }

        .creator-stat {
            background: var(--white);
            border-radius: var(--radius-xl);
            padding: var(--space-6);
            text-align: center;
            box-shadow: var(--shadow-md);
            transition: all var(--transition-base);
        }

        .creator-stat:hover {
            transform: translateY(-8px) scale(1.02);
            box-shadow: var(--shadow-xl);
        }

        .stat-icon {
            font-size: 3rem;
            margin-bottom: var(--space-3);
            display: block;
        }

        .stat-value {
            font-size: var(--text-4xl);
            font-weight: var(--weight-bold);
            background: var(--creator-gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            display: block;
            margin-bottom: var(--space-2);
        }

        .workflow-step {
            background: var(--white);
            border-radius: var(--radius-lg);
            padding: var(--space-5);
            border-left: 4px solid var(--creator-purple);
            box-shadow: var(--shadow-sm);
            position: relative;
        }

        .workflow-step::before {
            content: attr(data-step);
            position: absolute;
            top: -15px;
            left: 20px;
            background: var(--creator-gradient);
            color: white;
            width: 40px;
            height: 40px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: var(--weight-bold);
            box-shadow: var(--shadow-md);
        }

        .feature-creator {
            background: linear-gradient(135deg, var(--white), var(--gray-50));
            border: 2px solid transparent;
            background-clip: padding-box;
            position: relative;
            transition: all var(--transition-base);
        }

        .feature-creator::before {
            content: '';
            position: absolute;
            inset: -2px;
            border-radius: var(--radius-xl);
            background: var(--creator-gradient);
            z-index: -1;
            opacity: 0;
            transition: opacity var(--transition-base);
        }

        .feature-creator:hover::before {
            opacity: 1;
        }

        .feature-creator:hover {
            transform: translateY(-8px);
            box-shadow: var(--shadow-xl);
        }

        .gradient-text-creator {
            background: var(--creator-gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .timeline {
            position: relative;
            padding-left: var(--space-8);
        }

        .timeline::before {
            content: '';
            position: absolute;
            left: 0;
            top: 0;
            bottom: 0;
            width: 3px;
            background: var(--creator-gradient);
        }

        .timeline-item {
            position: relative;
            margin-bottom: var(--space-6);
            padding-left: var(--space-4);
        }

        .timeline-item::before {
            content: '';
            position: absolute;
            left: -42px;
            top: 8px;
            width: 16px;
            height: 16px;
            border-radius: 50%;
            background: var(--white);
            border: 3px solid var(--creator-purple);
            box-shadow: var(--shadow-md);
