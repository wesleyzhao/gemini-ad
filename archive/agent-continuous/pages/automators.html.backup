    <link rel="stylesheet" href="../assets/css/shared-styles.css">
    <style>
        /* Automation Theme */
        :root {
            --auto-electric: #00d9ff;
            --auto-purple: #7c3aed;
            --auto-green: #10b981;
            --auto-gradient: linear-gradient(135deg, var(--auto-purple), var(--auto-electric), var(--auto-green));
        }

        .hero-automators {
            background: linear-gradient(180deg, #0f0f23 0%, #1a1a2e 100%);
            color: var(--white);
            position: relative;
            overflow: hidden;
        }

        /* Circuit Board Background */
        .circuit-bg {
            position: absolute;
            inset: 0;
            background-image:
                linear-gradient(90deg, rgba(124, 58, 237, 0.1) 1px, transparent 1px),
                linear-gradient(0deg, rgba(124, 58, 237, 0.1) 1px, transparent 1px);
            background-size: 50px 50px;
            opacity: 0.3;
        }

        .workflow-diagram {
            background: rgba(255, 255, 255, 0.05);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: var(--radius-2xl);
            padding: var(--space-8);
            backdrop-filter: blur(10px);
            margin: var(--space-8) 0;
        }

        .workflow-node {
            background: rgba(255, 255, 255, 0.1);
            border: 2px solid var(--auto-electric);
            border-radius: var(--radius-lg);
            padding: var(--space-4);
            text-align: center;
            position: relative;
            transition: all var(--transition-base);
        }

        .workflow-node:hover {
            background: rgba(124, 58, 237, 0.3);
            transform: scale(1.05);
            box-shadow: 0 0 30px rgba(0, 217, 255, 0.4);
        }

        .workflow-connector {
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--auto-electric);
            font-size: 2rem;
        }

        .automation-card {
            background: linear-gradient(135deg, rgba(124, 58, 237, 0.1), rgba(0, 217, 255, 0.1));
            border: 1px solid rgba(124, 58, 237, 0.3);
            border-radius: var(--radius-xl);
            padding: var(--space-6);
            transition: all var(--transition-base);
        }

        .automation-card:hover {
            border-color: var(--auto-electric);
            transform: translateY(-8px);
            box-shadow: 0 8px 32px rgba(0, 217, 255, 0.3);
        }

        .code-block {
            background: #1e1e1e;
            border-radius: var(--radius-lg);
            padding: var(--space-4);
            font-family: 'Courier New', monospace;
            font-size: var(--text-sm);
            color: #d4d4d4;
            overflow-x: auto;
            border: 1px solid rgba(0, 217, 255, 0.3);
        }

        .code-block .keyword { color: #569cd6; }
        .code-block .string { color: #ce9178; }
        .code-block .comment { color: #6a9955; }

        .gradient-text-auto {
            background: var(--auto-gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .stats-automation {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: var(--space-4);
            margin: var(--space-8) 0;
        }

        .stat-auto {
            text-align: center;
            padding: var(--space-4);
            background: rgba(255, 255, 255, 0.05);
            border-radius: var(--radius-lg);
            border: 1px solid rgba(0, 217, 255, 0.2);
        }

        .stat-auto-number {
            font-size: var(--text-4xl);
            font-weight: var(--weight-bold);
            background: var(--auto-gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            display: block;
        }

        .integration-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(100px, 1fr));
            gap: var(--space-3);
            margin: var(--space-6) 0;
        }

        .integration-badge {
            background: rgba(255, 255, 255, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: var(--radius-lg);
            padding: var(--space-3);
            text-align: center;
            font-size: var(--text-sm);
            transition: all var(--transition-base);
        }

        .integration-badge:hover {
            background: rgba(124, 58, 237, 0.3);
            border-color: var(--auto-electric);
            transform: scale(1.05);
        }

        .workflow-grid {
            display: grid;
            grid-template-columns: repeat(5, 1fr);
            gap: var(--space-4);
            align-items: center;
        }

        /* Mobile responsiveness */
        @media (max-width: 968px) {
            .workflow-grid {
                grid-template-columns: 1fr;
                gap: var(--space-3);
            }

            .workflow-connector {
                transform: rotate(90deg);
                margin: var(--space-2) 0;
            }

            .workflow-diagram {
                padding: var(--space-4);
            }
        }

        @media (max-width: 768px) {
            .stats-automation {
                grid-template-columns: 1fr;
            }

            .integration-grid {
                grid-template-columns: repeat(3, 1fr);
            }
        }

        @media (max-width: 480px) {
            .integration-grid {
                grid-template-columns: repeat(2, 1fr);
            }
        }
    </style>
